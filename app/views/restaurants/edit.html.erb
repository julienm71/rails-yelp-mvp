<h1>Editing <%= @restaurant.name %></h1>
<hr>

<%= form_for @restaurant do |f| %>
  <div class="form-group">
      <%= f.label :name, 'Restaurant name' %>
      <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
      <%= f.label :address, 'Restaurant address' %>
      <%= f.text_field :address, class: "form-control" %>
  </div>
  <div class="form-group">
      <%= f.label :phone_number, 'Restaurant phone number' %>
      <%= f.text_field :phone_number, class: "form-control" %>
  </div>
  <div class="form-group">
      <%= f.label :category, 'Restaurant category' %>
      <%= f.text_field :category, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
  <div style="padding-top:10px;">
    <p><i class="fa fa-eye"></i> <%= link_to "Back to restaurant",  restaurant_path(@restaurant) %> | <i class="fa fa-history"></i> <%= link_to "Back to index",  restaurants_path %></p>
  </div>
<% end %>
