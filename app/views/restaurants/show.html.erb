<div class="card text-center">
  <div class="card-header" style="color:black;">
    <%= @restaurant.name %>
    <%= link_to "", restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure you want to delete this restaurant ?" }, :class => "far fa-trash-alt"%>
    <%= link_to "",  edit_restaurant_path(@restaurant), :class => "fa fa-pencil-alt" %>
    </div>
  <div class="card-body">
    <h5 class="card-title"><%= @restaurant.address %></h5>
    <p class="card-text"><%= @restaurant.phone_number %></p>
    <p class="card-text"><%= @restaurant.category %></p>
  </div>
  <div class="card-footer text-muted">
    <i class="fa fa-history"></i> <%= link_to "Back to index",  restaurants_path %>
  </div>
</div>
